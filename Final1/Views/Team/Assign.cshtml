@using Final1.Models.Entities
@model IEnumerable<Team>

@{
    var player = (Player?)ViewData["Player"];
    ViewData["Title"] = 
        $"Assign team for {player!.FirstName} {player!.LastName}";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScheduledGames)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ScheduledGames)
                    </td>
                    <td>
                        <a asp-action="create" asp-controller="PlayerTeam"
                            asp-route-id="@player!.Number" 
                            asp-route-courseId="@item.Id">Assign</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div>
    <a asp-action="Details" asp-controller="Player" asp-route-id="@player.Number">Back to Player Details</a>
</div>
